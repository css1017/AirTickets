<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_element"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvPriceItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sf_pro_semibold"
            tools:text="8 566 ₽"
            android:textColor="?attr/text"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDepartureItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sf_pro_semibold_italic"
            android:textColor="?attr/text"
            app:layout_constraintStart_toEndOf="@+id/ivLogoItem"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceItem"
            tools:text="17:45 —" />

        <TextView
            android:id="@+id/tvArrivalItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/sf_pro_semibold_italic"
            android:textColor="?attr/text"
            app:layout_constraintStart_toEndOf="@+id/tvDepartureItem"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceItem"
            tools:text="21:20" />

        <TextView
            android:id="@+id/tvDeparturePortItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sf_pro_regular_italic"
            android:textColor="?attr/text_accent"
            app:layout_constraintStart_toEndOf="@+id/ivLogoItem"
            app:layout_constraintTop_toBottomOf="@+id/tvDepartureItem"
            tools:text="BUS" />

        <TextView
            android:id="@+id/tvArrivalPortItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/sf_pro_regular_italic"
            android:textColor="?attr/text_accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvDepartureItem"
            app:layout_constraintTop_toBottomOf="@+id/tvArrivalItem"
            tools:text="VKO" />

        <TextView
            android:id="@+id/tvInfoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/sf_pro_regular"
            android:textColor="?attr/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvArrivalItem"
            tools:text="3.5 ч в пути/Без пересадок" />

        <ImageView
            android:id="@+id/ivLogoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceItem"
            app:srcCompat="@drawable/ic_company_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvTagItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tag"
        android:fontFamily="@font/sf_pro_regular"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        tools:text="Прилет вечером"
        android:textColor="?attr/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
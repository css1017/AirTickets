<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivMusicCover"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:contentDescription="@string/music_cover"
        app:srcCompat="@drawable/artist_cover_1" />

    <TextView
        android:id="@+id/tvMusicArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf_pro_semibold"
        android:textColor="?attr/text"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Die Antwoord" />

    <TextView
        android:id="@+id/tvMusicCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf_pro_regular"
        android:textColor="?attr/text"
        android:textStyle="bold"
        tools:text="Будапешт" />

    <TextView
        android:id="@+id/tvMusicPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf_pro_regular"
        android:textColor="?attr/text"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_menu_tickets"
        tools:text="от 22 047 ₽" />
</LinearLayout>